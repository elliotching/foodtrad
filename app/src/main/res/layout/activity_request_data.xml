<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_apicall"
        style="@style/toolbar_style"
        app:title="@string/s_item4_dev" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edittext_apicall_ip_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:maxLines="1"
            android:inputType="text"
            android:textSize="@dimen/d_text_size_small" />

        <Button
            android:id="@+id/button_start_apiconnection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="start"
            style="@style/style_for_default_button_and_text_size_no_theme"/>

    </LinearLayout>

    <ListView
        android:id="@+id/listview_requestresult"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>